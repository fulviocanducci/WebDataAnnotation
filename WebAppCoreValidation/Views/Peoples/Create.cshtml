            { 
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            }
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValueInitials" class="control-label"></label>
                <input asp-for="ValueInitials" class="form-control" />
                <span asp-validation-for="ValueInitials" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValueEnds" class="control-label"></label>
                <input asp-for="ValueEnds" class="form-control" />
                <span asp-validation-for="ValueEnds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
